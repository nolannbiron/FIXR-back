{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "esModuleInterop": true,
        "lib": ["dom", "es6"],
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts", "tests/**/*.spec.ts"],
    "files": ["./app.ts"]
}
